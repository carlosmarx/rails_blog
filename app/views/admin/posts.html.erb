<h1 class="text-center">Adminstrator </h1>
<%= render 'admin/nav_links' %>
<table class="table table-hover table-bordered mt-4">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Post</th>
      <th scope="col">Comments</th>
      <th scope="col">User</th>
      <th scope="col">Created At</th>
      <th scope="col">Updated At</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= link_to post.title, admin_post_path(post) %></td>
        <td><%= pluralize(post.comments.size, "Comment") %></td>
        <td><%= post.user.email %></td>
        <td><%= time_ago_in_words(post.created_at) %></td>
        <td><%= time_ago_in_words(post.updated_at) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
